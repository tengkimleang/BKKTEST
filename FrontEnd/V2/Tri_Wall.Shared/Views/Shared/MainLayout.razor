@inherits LayoutComponentBase
<FluentLayout>
    <FluentHeader>
        @* <img src="_content/Tri_Wall.Shared/images/logo.png" width="42px" height="32px"  /> *@
        <img src="_content/Tri_Wall.Shared/images/logo.png" width="42px" height="32px" style="filter: brightness(0) invert(1);" />
        &nbsp;&nbsp;Tri-Wall
        <FluentSpacer />
        <ProfileMenu />
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content" style="overflow-y: hidden;">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="http://netsys.co.th/en/" target="_blank">About NETSYS</a>
        <FluentSpacer />
        @*<a href="http://netsys.co.th/en/" target="_blank">About NETSYS</a>*@
    </FluentFooter>
    <FluentDesignTheme Mode="DesignThemeModes.Light" OfficeColor="Microsoft.FluentUI.AspNetCore.Components.OfficeColor.Access" />
</FluentLayout>

<FluentToastProvider @rendermode="InteractiveWebAssembly"/>
<FluentDialogProvider @rendermode="InteractiveWebAssembly" />
<FluentTooltipProvider />
<FluentMessageBarProvider />
@* <FluentDesignTheme StorageName="theme" /> *@
