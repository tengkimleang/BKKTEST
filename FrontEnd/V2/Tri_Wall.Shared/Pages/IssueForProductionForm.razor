@page "/issueforproduction"
<PageTitle>Issue For Production</PageTitle>
@rendermode InteractiveWebAssembly
<AuthorizeView Context="another_name">
    <Authorized>
        <FluentGrid Spacing="2" OnBreakpointEnter="@UpdateGridSize" AdaptiveRendering="true">
        </FluentGrid>
        @if (_init)
        {
            @if (_isXs)
            {
                <IssueForProductionMobile/>
            }
            else
            {
                <IssueForProductionDefault/>
            }
        }
    </Authorized>
</AuthorizeView>