@page "/counter"
@rendermode InteractiveWebAssembly

 <PageTitle>Counter</PageTitle>

@*<h1>Counter</h1>

<div role="status" style="padding-bottom: 1em;">
    Current count: <FluentBadge Appearance="Appearance.Neutral">@currentCount</FluentBadge>
</div> *@
<AuthorizeView>
    <Authorized>
        <p>Hello, @context.User.FindFirst("id")?.Value</p>
    </Authorized>
    <NotAuthorized>
        <p>You're not authorized.</p>
    </NotAuthorized>
</AuthorizeView>
<FluentButton Appearance="Appearance.Accent" @onclick="IncrementCount">Click me</FluentButton>

@code {
    private int currentCount = 0;
    [Inject] public CookieAuthenticationSateProvider cookieAuthenticationSateProvider { get; set; }
    private async void IncrementCount()
    {
        await cookieAuthenticationSateProvider.Login();
    }

}
