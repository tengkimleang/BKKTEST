@page "/goodreceptpoform"
@rendermode InteractiveWebAssembly
@* @attribute [StreamRendering] *@
<PageTitle>Good Receipt PO</PageTitle>
<FluentGrid Spacing="2" OnBreakpointEnter="@UpdateGridSize" AdaptiveRendering="true">
</FluentGrid>
@if (init)
{
    @if (isXs)
    {
        <GoodsReceiptPoMobile />
    }
    else
    {
        <GoodsReceiptPoDefault Visible="visible"/>
    }
}


<FluentOverlay @bind-Visible=@visible
               Opacity="0.4"
               FullScreen="true"
               OnClose="OnCloseOverlay"
               PreventScroll=true>
    <FluentProgressRing/>
</FluentOverlay>